{
  "name": "exp-wide-deep (prebuilt)",
  "image": "uqmv:wd",

  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",

  "runArgs": ["--gpus", "all"],               // remove if no GPU on host
  "remoteUser": "root",

  "containerEnv": {
    "PYTHONPATH": "/workspace"
  },

  "customizations": {
    "vscode": {
      "extensions": ["ms-toolsai.jupyter", "ms-python.python"],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python"
      }
    }
  },

  // Register a container-side Jupyter kernel tied to /usr/bin/python
  "postCreateCommand": "python -m ipykernel install --sys-prefix --name exp-wide-deep --display-name 'Python (exp-wide-deep)'",
}
